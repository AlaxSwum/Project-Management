            <div className="p-6">
              <h2 className="text-2xl font-bold text-gray-900 mb-2">
                Folder Access Control
              </h2>
              <p className="text-sm text-gray-600 mb-6">
                Folder: {selectedFolderForAccess.folder_name}
              </p>
              
              <div className="mb-6">
                <h3 className="text-lg font-semibold text-gray-900 mb-3">Current Access</h3>
                <div className="space-y-2">
                  {folderAccess.length === 0 ? (
                    <p className="text-sm text-gray-500">No additional users have access to this folder.</p>
                  ) : (
                    folderAccess.map(access => (
                      <div key={access.id} className="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
                        <div>
                          <p className="text-sm font-medium text-gray-900">User: {access.user_id.substring(0, 8)}...</p>
                          <p className="text-xs text-gray-500">{access.access_level}</p>
                        </div>
                        <button
                          onClick={() => revokeFolderAccess(access.id)}
                          className="text-red-600 hover:text-red-800 text-sm"
                        >
                          Revoke
                        </button>
                      </div>
                    ))
                  )}
                </div>
              </div>

              <div>
                <h3 className="text-lg font-semibold text-gray-900 mb-3">Grant New Access</h3>
                <p className="text-sm text-gray-600 mb-4">
                  Enter the user ID and select access level to grant permissions.
                </p>
                <div className="flex gap-3">
                  <input
                    type="text"
                    placeholder="User ID (UUID)"
                    id="newAccessUserId"
                    className="flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                  />
                  <select
                    id="newAccessLevel"
                    className="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                  >
                    <option value="VIEWER">Viewer</option>
                    <option value="EDITOR">Editor</option>
                    <option value="ADMIN">Admin</option>
                  </select>
                  <button
                    onClick={() => {
                      const userId = (document.getElementById('newAccessUserId') as HTMLInputElement).value;
                      const accessLevel = (document.getElementById('newAccessLevel') as HTMLSelectElement).value;
                      if (userId) {
                        grantFolderAccess(userId, accessLevel);
                      }
                    }}
                    className="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
                  >
                    Grant
                  </button>
                </div>
              </div>

              <div className="mt-6 flex justify-end">
                <button
                  onClick={() => setShowAccessControlModal(false)}
                  className="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50"
                >
                  Close
                </button>
              </div>
            </div>
          </div>
        </div>
      )}

      {/* Archive Modal */}
      {showArchiveModal && (
        <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
          <div className="bg-white rounded-lg shadow-xl max-w-md w-full">
            <div className="p-6">
              <h2 className="text-2xl font-bold text-gray-900 mb-4">Archive Old Entries</h2>
              <p className="text-sm text-gray-600 mb-4">
                Archive all confirmed entries before a specific date. Archived entries will be moved to the archive table for historical reference.
              </p>
              
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-1">
                  Archive entries before:
                </label>
                <input
                  type="date"
                  id="archiveCutoffDate"
                  className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                />
              </div>

              <div className="mt-6 flex justify-end gap-3">
                <button
                  onClick={() => setShowArchiveModal(false)}
                  className="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50"
                >
                  Cancel
                </button>
                <button
                  onClick={() => {
                    const cutoffDate = (document.getElementById('archiveCutoffDate') as HTMLInputElement).value;
                    if (cutoffDate) {
                      archiveOldEntries(cutoffDate);
                    }
                  }}
                  className="px-4 py-2 bg-orange-600 text-white rounded-lg hover:bg-orange-700"
                >
                  Archive
                </button>
              </div>
            </div>
          </div>
        </div>
      )}
        </div>
      </div>
    </div>
  );
}

