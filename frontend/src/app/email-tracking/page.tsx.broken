'use client';

import React, { useState, useEffect } from 'react';
import { createClient } from '@supabase/supabase-js';
import { useAuth } from '@/contexts/AuthContext';
import Sidebar from '@/components/Sidebar';
import MobileHeader from '@/components/MobileHeader';

// Supabase client
const supabase = createClient(
  process.env.NEXT_PUBLIC_SUPABASE_URL!,
  process.env.NEXT_PUBLIC_SUPABASE_ANON_KEY!
);

interface EmailAccount {
  id: string;
  account_name: string;
  full_email: string;
  description: string;
  is_active: boolean;
}

interface Folder {
  id: string;
  folder_name: string;
  folder_type: 'YEAR' | 'MONTH' | 'WEEK';
  parent_folder_id: string | null;
  year: number;
  month: number | null;
  week_number: number | null;
  start_date: string | null;
  end_date: string | null;
  created_by: string;
  is_archived: boolean;
}

interface EmailEntry {
  id: string;
  folder_id: string;
  entry_date: string;
  from_sender: string;
  subject: string;
  remark: string;
  to_do: string;
  final_remark: string;
  folder_placed: string;
  response: string;
  email_account_id: string;
  confirmed: boolean;
  created_by: string;
  created_at: string;
  updated_at: string;
}

interface FolderAccess {
  id: string;
  folder_id: string;
  user_id: string;
  access_level: 'VIEWER' | 'EDITOR' | 'ADMIN';
}

export default function EmailTrackingPage() {
  const { user } = useAuth();
  const [projects, setProjects] = useState<any[]>([]);
  const [isMobile, setIsMobile] = useState(false);
  
  // State for folders
  const [yearFolders, setYearFolders] = useState<Folder[]>([]);
  const [selectedYear, setSelectedYear] = useState<Folder | null>(null);
  const [monthFolders, setMonthFolders] = useState<Folder[]>([]);
  const [selectedMonth, setSelectedMonth] = useState<Folder | null>(null);
  const [weekFolders, setWeekFolders] = useState<Folder[]>([]);
  const [selectedWeek, setSelectedWeek] = useState<Folder | null>(null);
  
  // State for entries
  const [entries, setEntries] = useState<EmailEntry[]>([]);
  const [filteredEntries, setFilteredEntries] = useState<EmailEntry[]>([]);
  
  // State for email accounts
  const [emailAccounts, setEmailAccounts] = useState<EmailAccount[]>([]);
  
  // State for filters
  const [dateFilter, setDateFilter] = useState('');
  const [fromFilter, setFromFilter] = useState('');
  const [subjectFilter, setSubjectFilter] = useState('');
  const [remarkFilter, setRemarkFilter] = useState('');
  const [toDoFilter, setToDoFilter] = useState('');
  const [finalRemarkFilter, setFinalRemarkFilter] = useState('');
  const [folderPlacedFilter, setFolderPlacedFilter] = useState('');
  const [responseFilter, setResponseFilter] = useState('');
  const [emailAccountFilter, setEmailAccountFilter] = useState('');
  const [confirmedFilter, setConfirmedFilter] = useState<string>('all');
  
  // State for date range filtering
  const [dateRangeType, setDateRangeType] = useState<'day' | 'week' | 'month'>('day');
  const [startDate, setStartDate] = useState('');
  const [endDate, setEndDate] = useState('');
  
  // State for UI
  const [showNewEntryForm, setShowNewEntryForm] = useState(false);
  const [showNewAccountForm, setShowNewAccountForm] = useState(false);
  const [showAccessControlModal, setShowAccessControlModal] = useState(false);
  const [showArchiveModal, setShowArchiveModal] = useState(false);
  const [editingEntry, setEditingEntry] = useState<EmailEntry | null>(null);
  
  // State for folder access
  const [folderAccess, setFolderAccess] = useState<FolderAccess[]>([]);
  const [selectedFolderForAccess, setSelectedFolderForAccess] = useState<Folder | null>(null);
  
  // Form state for new entry
  const [newEntry, setNewEntry] = useState({
    entry_date: new Date().toISOString().split('T')[0],
    from_sender: '',
    subject: '',
    remark: '',
    to_do: '',
    final_remark: '',
    folder_placed: '',
    response: '',
    email_account_id: '',
    confirmed: false
  });
  
  // Form state for new email account
  const [newAccount, setNewAccount] = useState({
    account_name: '',
    full_email: '',
    description: ''
  });
  
  // Loading states
  const [loading, setLoading] = useState(true);
  const [saving, setSaving] = useState(false);

  // Fetch year folders
  const fetchYearFolders = async () => {
    try {
      const { data, error } = await supabase
        .from('email_tracking_folders')
        .select('*')
        .eq('folder_type', 'YEAR')
        .order('year', { ascending: false });
      
      if (error) throw error;
      setYearFolders(data || []);
    } catch (error) {
      console.error('Error fetching year folders:', error);
    }
  };

  // Fetch month folders for selected year
  const fetchMonthFolders = async (yearFolderId: string) => {
    try {
      const { data, error } = await supabase
        .from('email_tracking_folders')
        .select('*')
        .eq('folder_type', 'MONTH')
        .eq('parent_folder_id', yearFolderId)
        .order('month', { ascending: true });
      
      if (error) throw error;
      setMonthFolders(data || []);
    } catch (error) {
      console.error('Error fetching month folders:', error);
    }
  };

  // Fetch week folders for selected month
  const fetchWeekFolders = async (monthFolderId: string) => {
    try {
      const { data, error } = await supabase
        .from('email_tracking_folders')
        .select('*')
        .eq('folder_type', 'WEEK')
        .eq('parent_folder_id', monthFolderId)
        .order('week_number', { ascending: true });
      
      if (error) throw error;
      setWeekFolders(data || []);
    } catch (error) {
      console.error('Error fetching week folders:', error);
    }
  };

  // Fetch entries for selected folder
  const fetchEntries = async (folderId: string) => {
    try {
      const { data, error } = await supabase
        .from('email_tracking_entries')
        .select('*')
        .eq('folder_id', folderId)
        .order('entry_date', { ascending: false });
      
      if (error) throw error;
      setEntries(data || []);
      setFilteredEntries(data || []);
    } catch (error) {
      console.error('Error fetching entries:', error);
    }
  };

  // Fetch email accounts
  const fetchEmailAccounts = async () => {
    try {
      const { data, error } = await supabase
        .from('email_accounts')
        .select('*')
        .eq('is_active', true)
        .order('account_name', { ascending: true });
      
      if (error) throw error;
      setEmailAccounts(data || []);
    } catch (error) {
      console.error('Error fetching email accounts:', error);
    }
  };

  // Fetch folder access
  const fetchFolderAccess = async (folderId: string) => {
    try {
      const { data, error } = await supabase
        .from('email_tracking_folder_access')
        .select('*')
        .eq('folder_id', folderId);
      
      if (error) throw error;
      setFolderAccess(data || []);
    } catch (error) {
      console.error('Error fetching folder access:', error);
    }
  };

  // Detect mobile
  useEffect(() => {
    const checkMobile = () => {
      setIsMobile(window.innerWidth < 768);
    };
    checkMobile();
    window.addEventListener('resize', checkMobile);
    return () => window.removeEventListener('resize', checkMobile);
  }, []);

  // Initialize data
  useEffect(() => {
    const initData = async () => {
      setLoading(true);
      await fetchYearFolders();
      await fetchEmailAccounts();
      setLoading(false);
    };
    initData();
  }, []);

  // Filter entries based on all filters
  useEffect(() => {
    let filtered = [...entries];
    
    // Date filter
    if (dateFilter) {
      filtered = filtered.filter(entry => entry.entry_date === dateFilter);
    }
    
    // Date range filter
    if (startDate && endDate) {
      filtered = filtered.filter(entry => {
        const entryDate = new Date(entry.entry_date);
        return entryDate >= new Date(startDate) && entryDate <= new Date(endDate);
      });
    }
    
    // Text filters
    if (fromFilter) {
      filtered = filtered.filter(entry => 
        entry.from_sender.toLowerCase().includes(fromFilter.toLowerCase())
      );
    }
    
    if (subjectFilter) {
      filtered = filtered.filter(entry => 
        entry.subject.toLowerCase().includes(subjectFilter.toLowerCase())
      );
    }
    
    if (remarkFilter) {
      filtered = filtered.filter(entry => 
        entry.remark?.toLowerCase().includes(remarkFilter.toLowerCase())
      );
    }
    
    if (toDoFilter) {
      filtered = filtered.filter(entry => 
        entry.to_do?.toLowerCase().includes(toDoFilter.toLowerCase())
      );
    }
    
    if (finalRemarkFilter) {
      filtered = filtered.filter(entry => 
        entry.final_remark?.toLowerCase().includes(finalRemarkFilter.toLowerCase())
      );
    }
    
    if (folderPlacedFilter) {
      filtered = filtered.filter(entry => 
        entry.folder_placed?.toLowerCase().includes(folderPlacedFilter.toLowerCase())
      );
    }
    
    if (responseFilter) {
      filtered = filtered.filter(entry => 
        entry.response?.toLowerCase().includes(responseFilter.toLowerCase())
      );
    }
    
    if (emailAccountFilter && emailAccountFilter !== 'all') {
      filtered = filtered.filter(entry => entry.email_account_id === emailAccountFilter);
    }
    
    if (confirmedFilter !== 'all') {
      const isConfirmed = confirmedFilter === 'true';
      filtered = filtered.filter(entry => entry.confirmed === isConfirmed);
    }
    
    setFilteredEntries(filtered);
  }, [
    entries, dateFilter, fromFilter, subjectFilter, remarkFilter, toDoFilter,
    finalRemarkFilter, folderPlacedFilter, responseFilter, emailAccountFilter,
    confirmedFilter, startDate, endDate
  ]);

  // Create new year folder
  const createYearFolder = async (year: number) => {
    if (!user) return;
    
    try {
      setSaving(true);
      const { data, error } = await supabase.rpc('create_year_folder', {
        year_val: year,
        creator_id: user.id
      });
      
      if (error) throw error;
      await fetchYearFolders();
      alert(`Year ${year} folder created successfully`);
    } catch (error: any) {
      console.error('Error creating year folder:', error);
      alert('Error creating year folder: ' + error.message);
    } finally {
      setSaving(false);
    }
  };

  // Create new month folder
  const createMonthFolder = async (year: number, month: number, parentId: string) => {
    if (!user) return;
    
    try {
      setSaving(true);
      const { data, error } = await supabase.rpc('create_month_folder', {
        parent_id: parentId,
        year_val: year,
        month_val: month,
        creator_id: user.id
      });
      
      if (error) throw error;
      await fetchMonthFolders(parentId);
      alert('Month folder created successfully');
    } catch (error: any) {
      console.error('Error creating month folder:', error);
      alert('Error creating month folder: ' + error.message);
    } finally {
      setSaving(false);
    }
  };

  // Create new week folder
  const createWeekFolder = async (
    year: number, 
    weekNum: number, 
    startDate: string, 
    endDate: string, 
    parentId: string
  ) => {
    if (!user) return;
    
    try {
      setSaving(true);
      const { data, error } = await supabase.rpc('create_week_folder', {
        parent_id: parentId,
        year_val: year,
        week_num: weekNum,
        start_dt: startDate,
        end_dt: endDate,
        creator_id: user.id
      });
      
      if (error) throw error;
      await fetchWeekFolders(parentId);
      alert('Week folder created successfully');
    } catch (error: any) {
      console.error('Error creating week folder:', error);
      alert('Error creating week folder: ' + error.message);
    } finally {
      setSaving(false);
    }
  };

  // Add new entry
  const addEntry = async () => {
    if (!user || !getActiveFolderId()) return;
    
    try {
      setSaving(true);
      const { data, error } = await supabase
        .from('email_tracking_entries')
        .insert([{
          ...newEntry,
          folder_id: getActiveFolderId(),
          created_by: user.id
        }]);
      
      if (error) throw error;
      
      // Reset form and refresh
      setNewEntry({
        entry_date: new Date().toISOString().split('T')[0],
        from_sender: '',
        subject: '',
        remark: '',
        to_do: '',
        final_remark: '',
        folder_placed: '',
        response: '',
        email_account_id: '',
        confirmed: false
      });
      setShowNewEntryForm(false);
      await fetchEntries(getActiveFolderId()!);
      alert('Entry added successfully');
    } catch (error: any) {
      console.error('Error adding entry:', error);
      alert('Error adding entry: ' + error.message);
    } finally {
      setSaving(false);
    }
  };

  // Update entry
  const updateEntry = async (entry: EmailEntry) => {
    try {
      setSaving(true);
      const { error } = await supabase
        .from('email_tracking_entries')
        .update({
          entry_date: entry.entry_date,
          from_sender: entry.from_sender,
          subject: entry.subject,
          remark: entry.remark,
          to_do: entry.to_do,
          final_remark: entry.final_remark,
          folder_placed: entry.folder_placed,
          response: entry.response,
          email_account_id: entry.email_account_id,
          confirmed: entry.confirmed,
          updated_by: user?.id,
          updated_at: new Date().toISOString()
        })
        .eq('id', entry.id);
      
      if (error) throw error;
      
      setEditingEntry(null);
      await fetchEntries(getActiveFolderId()!);
    } catch (error: any) {
      console.error('Error updating entry:', error);
      alert('Error updating entry: ' + error.message);
    } finally {
      setSaving(false);
    }
  };

  // Delete entry
  const deleteEntry = async (entryId: string) => {
    if (!confirm('Are you sure you want to delete this entry?')) return;
    
    try {
      setSaving(true);
      const { error } = await supabase
        .from('email_tracking_entries')
        .delete()
        .eq('id', entryId);
      
      if (error) throw error;
      await fetchEntries(getActiveFolderId()!);
      alert('Entry deleted successfully');
    } catch (error: any) {
      console.error('Error deleting entry:', error);
      alert('Error deleting entry: ' + error.message);
    } finally {
      setSaving(false);
    }
  };

  // Add new email account
  const addEmailAccount = async () => {
    try {
      setSaving(true);
      const { data, error } = await supabase
        .from('email_accounts')
        .insert([{
          ...newAccount,
          created_by: user?.id
        }]);
      
      if (error) throw error;
      
      setNewAccount({ account_name: '', full_email: '', description: '' });
      setShowNewAccountForm(false);
      await fetchEmailAccounts();
      alert('Email account added successfully');
    } catch (error: any) {
      console.error('Error adding email account:', error);
      alert('Error adding email account: ' + error.message);
    } finally {
      setSaving(false);
    }
  };

  // Grant folder access
  const grantFolderAccess = async (userId: string, accessLevel: string) => {
    if (!selectedFolderForAccess) return;
    
    try {
      setSaving(true);
      const { error } = await supabase
        .from('email_tracking_folder_access')
        .insert([{
          folder_id: selectedFolderForAccess.id,
          user_id: userId,
          access_level: accessLevel,
          granted_by: user?.id
        }]);
      
      if (error) throw error;
      
      await fetchFolderAccess(selectedFolderForAccess.id);
      alert('Access granted successfully');
    } catch (error: any) {
      console.error('Error granting access:', error);
      alert('Error granting access: ' + error.message);
    } finally {
      setSaving(false);
    }
  };

  // Revoke folder access
  const revokeFolderAccess = async (accessId: string) => {
    if (!confirm('Are you sure you want to revoke this access?')) return;
    
    try {
      setSaving(true);
      const { error } = await supabase
        .from('email_tracking_folder_access')
        .delete()
        .eq('id', accessId);
      
      if (error) throw error;
      
      await fetchFolderAccess(selectedFolderForAccess!.id);
      alert('Access revoked successfully');
    } catch (error: any) {
      console.error('Error revoking access:', error);
      alert('Error revoking access: ' + error.message);
    } finally {
      setSaving(false);
    }
  };

  // Archive old entries
  const archiveOldEntries = async (cutoffDate: string) => {
    if (!confirm(`Archive all confirmed entries before ${cutoffDate}?`)) return;
    
    try {
      setSaving(true);
      const { data, error } = await supabase.rpc('archive_old_email_entries', {
        cutoff_date: cutoffDate
      });
      
      if (error) throw error;
      
      alert(`${data} entries archived successfully`);
      await fetchEntries(getActiveFolderId()!);
      setShowArchiveModal(false);
    } catch (error: any) {
      console.error('Error archiving entries:', error);
      alert('Error archiving entries: ' + error.message);
    } finally {
      setSaving(false);
    }
  };

  // Get active folder ID
  const getActiveFolderId = (): string | null => {
    if (selectedWeek) return selectedWeek.id;
    if (selectedMonth) return selectedMonth.id;
    if (selectedYear) return selectedYear.id;
    return null;
  };

  // Get active folder name
  const getActiveFolderName = (): string => {
    if (selectedWeek) return `${selectedYear?.folder_name} / ${selectedMonth?.folder_name} / ${selectedWeek.folder_name}`;
    if (selectedMonth) return `${selectedYear?.folder_name} / ${selectedMonth.folder_name}`;
    if (selectedYear) return selectedYear.folder_name;
    return 'No folder selected';
  };

  // Clear all filters
  const clearFilters = () => {
    setDateFilter('');
    setFromFilter('');
    setSubjectFilter('');
    setRemarkFilter('');
    setToDoFilter('');
    setFinalRemarkFilter('');
    setFolderPlacedFilter('');
    setResponseFilter('');
    setEmailAccountFilter('');
    setConfirmedFilter('all');
    setStartDate('');
    setEndDate('');
  };

  if (loading) {
    return (
      <div style={{ display: 'flex', minHeight: '100vh', background: '#F5F5ED' }}>
        <Sidebar projects={projects} onCreateProject={() => {}} />
        <div style={{ 
          marginLeft: '280px',
          padding: '2rem', 
          background: '#F5F5ED', 
          flex: 1,
          display: 'flex',
          alignItems: 'center',
          justifyContent: 'center'
        }}>
          <div className="text-center">
            <div className="animate-spin rounded-full h-16 w-16 border-b-2 border-blue-600 mx-auto"></div>
            <p className="mt-4 text-gray-600">Loading Email Tracking System...</p>
          </div>
        </div>
      </div>
    );
  }

  return (
    <div style={{ display: 'flex', minHeight: '100vh', background: '#F5F5ED' }}>
      <Sidebar projects={projects} onCreateProject={() => {}} />
      <MobileHeader title="Email Tracking" isMobile={isMobile} />
      <div style={{ marginLeft: '280px', padding: '2rem', background: '#F5F5ED', flex: 1, overflow: 'auto' }}>
        <div className="max-w-7xl mx-auto">
      {/* Header */}
      <div className="bg-white shadow-sm border border-gray-200 rounded-lg mb-6">
        <div className="px-6 py-6">
          <div className="flex justify-between items-center">
            <div>
              <h1 className="text-3xl font-bold text-gray-900">Email Tracking System</h1>
              <p className="mt-1 text-sm text-gray-600">Rother Care Pharmacy - Communication Management</p>
            </div>
            <div className="flex gap-3">
              <button
                onClick={() => setShowNewAccountForm(true)}
                className="px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors"
              >
                Add Email Account
              </button>
              <button
                onClick={() => {
                  const year = prompt('Enter year (e.g., 2025):');
                  if (year && !isNaN(parseInt(year))) {
                    createYearFolder(parseInt(year));
                  }
                }}
                className="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
              >
                New Year Folder
              </button>
            </div>
          </div>
        </div>
      </div>
        {/* Folder Navigation */}
        <div className="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
          <h2 className="text-xl font-semibold text-gray-900 mb-4">Folder Navigation</h2>
          
          <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
            {/* Year Selection */}
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">
                Select Year
              </label>
              <select
                value={selectedYear?.id || ''}
                onChange={(e) => {
                  const year = yearFolders.find(f => f.id === e.target.value);
                  setSelectedYear(year || null);
                  setSelectedMonth(null);
                  setSelectedWeek(null);
                  setMonthFolders([]);
                  setWeekFolders([]);
                  setEntries([]);
                  if (year) {
                    fetchMonthFolders(year.id);
                    fetchEntries(year.id);
                  }
                }}
                className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              >
                <option value="">-- Select Year --</option>
                {yearFolders.map(folder => (
                  <option key={folder.id} value={folder.id}>
                    {folder.folder_name}
                  </option>
                ))}
              </select>
              {selectedYear && (
                <button
                  onClick={() => {
                    const month = prompt('Enter month number (1-12):');
                    if (month && !isNaN(parseInt(month))) {
                      createMonthFolder(selectedYear.year, parseInt(month), selectedYear.id);
                    }
                  }}
                  className="mt-2 w-full px-3 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 text-sm"
                >
                  Add Month
                </button>
              )}
            </div>

            {/* Month Selection */}
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">
                Select Month
              </label>
              <select
                value={selectedMonth?.id || ''}
                onChange={(e) => {
                  const month = monthFolders.find(f => f.id === e.target.value);
                  setSelectedMonth(month || null);
                  setSelectedWeek(null);
                  setWeekFolders([]);
                  if (month) {
                    fetchWeekFolders(month.id);
                    fetchEntries(month.id);
                  } else if (selectedYear) {
                    fetchEntries(selectedYear.id);
                  }
                }}
                disabled={!selectedYear}
                className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 disabled:bg-gray-100 disabled:cursor-not-allowed"
              >
                <option value="">-- All Months --</option>
                {monthFolders.map(folder => (
                  <option key={folder.id} value={folder.id}>
                    {folder.folder_name}
                  </option>
                ))}
              </select>
              {selectedMonth && (
                <button
                  onClick={() => {
                    const weekNum = prompt('Enter week number:');
                    const startDate = prompt('Enter start date (YYYY-MM-DD):');
                    const endDate = prompt('Enter end date (YYYY-MM-DD):');
                    if (weekNum && startDate && endDate) {
                      createWeekFolder(selectedYear!.year, parseInt(weekNum), startDate, endDate, selectedMonth.id);
                    }
                  }}
                  className="mt-2 w-full px-3 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 text-sm"
                >
                  Add Week
                </button>
              )}
            </div>

            {/* Week Selection */}
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">
                Select Week
              </label>
              <select
                value={selectedWeek?.id || ''}
                onChange={(e) => {
                  const week = weekFolders.find(f => f.id === e.target.value);
                  setSelectedWeek(week || null);
                  if (week) {
                    fetchEntries(week.id);
                  } else if (selectedMonth) {
                    fetchEntries(selectedMonth.id);
                  } else if (selectedYear) {
                    fetchEntries(selectedYear.id);
                  }
                }}
                disabled={!selectedMonth}
                className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 disabled:bg-gray-100 disabled:cursor-not-allowed"
              >
                <option value="">-- All Weeks --</option>
                {weekFolders.map(folder => (
                  <option key={folder.id} value={folder.id}>
                    {folder.folder_name}
                  </option>
                ))}
              </select>
            </div>
          </div>

          {/* Active Folder Info */}
